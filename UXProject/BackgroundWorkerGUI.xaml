<UserControl x:Class="UXProject.BackgroundWorkerGUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d">
    <Grid>
        <StackPanel Height="14" Orientation="Horizontal" Margin="5">
            <fa:ImageAwesome Icon="Cog" Spin="True" SpinDuration="2" Height="14" Width="14" Foreground="#333" Name="icon"/>
            <TextBlock Margin="5 -2 0 0" Text="Working..." FontWeight="SemiBold" Name="text"/>
        </StackPanel>
    </Grid>
</UserControl>
